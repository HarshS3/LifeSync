# .env example for LifeSync server
# Copy this file to .env and fill in your credentials

GMAIL_USER=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password
MONGO_URI=mongodb://localhost:27017/lifesync
JWT_SECRET=your_jwt_secret

# Optional (AI)
# Select which LLM provider to use:
# - auto: try Groq, then Gemini, then OpenAI (if keys exist)
# - groq | gemini | openai: force one provider
# - none: disable LLM calls (deterministic-only)
LLM_PROVIDER=auto

GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# Google Gemini (Generative Language API)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

OPENAI_API_KEY=

# Optional (Phase 4 textbook RAG microservice)
# Run ai_service on http://localhost:8000 and set this so medical-mode can fetch citations.
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_TIMEOUT_MS=2500

# Optional safety switch: when enabled, medical mode will refuse to answer unless textbook RAG
# returns citations with sufficient confidence.
MEDICAL_REQUIRE_RAG=0

# Optional (Phase 5): include a structured supplement advisor JSON in medical mode.
# This is non-prescriptive (no dosing) and includes conservative interaction cautions.
MEDICAL_SUPPLEMENT_ADVISOR=1

# Reminders
# Set to '1' to print reminders instead of sending emails
REMINDER_EMAIL_DRY_RUN=1
# When DRY_RUN=0, set this to a real inbox to receive the test email
REMINDER_TEST_TO=
# Used by one-off scripts to prevent the background cron from firing
REMINDER_SCHEDULER_DISABLE_CRON=0

# Logs reminder ticks + send results
REMINDER_DEBUG=0

# Client base URL used in password reset links (optional)
CLIENT_URL=http://localhost:5173
